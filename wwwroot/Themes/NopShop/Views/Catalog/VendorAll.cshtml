@model IList<VendorModel>
@{
    Layout = "~/Views/Shared/_ColumnsTwo.cshtml";

    //title
    Html.AddTitleParts(T("PageTitle.Vendors").Text);
}
@using Nop.Web.Models.Catalog;
<div class="page vendor-list-page">
    <div class="panel panel-default form-panel">
        <div class="panel-heading">
            <h3>@T("Vendors.List")</h3>
        </div>
        <div class="panel-body">
            @if (Model.Count > 0)
            {
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-md-3">
                            <h2>
                                <a href="@Url.RouteUrl("Vendor", new {vendorId = item.Id, SeName = item.SeName})" class="vendor">
                                    @item.Name
                                </a>
                            </h2>
                            <a href="@Url.RouteUrl("Vendor", new {SeName = item.SeName})" title="@item.PictureModel.Title">
                                <img width="100%" height="100%" alt="@item.PictureModel.AlternateText" src="@item.PictureModel.ImageUrl" title="@item.PictureModel.Title" />
                            </a>

                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>
