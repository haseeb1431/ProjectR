@model AdminHeaderLinksModel

@using Nop.Web.Models.Common;

@if (Model.IsCustomerImpersonated || Model.DisplayAdminLink)

{

    <li>

        @if (Model.IsCustomerImpersonated)

        {

            <span class="impersonate">@string.Format(T("Account.ImpersonatedAs").Text, Model.ImpersonatedCustomerEmailUsername)

                - <a href="@Url.RouteUrl("Logout")" title="@T("Account.ImpersonatedAs.Finish.Hint")">@T("Account.ImpersonatedAs.Finish")</a>

            </span>

        }

        @if (Model.DisplayAdminLink)

        {

            <a href="@Url.Content("~/admin")" ><i class="fa fa-cog"></i>@T("Account.Administration")</a>
            <a href="@Url.Action("list","Admin/Order")" class="btn bg-blue">
                <i class="fa fa-plus-square"></i>
                   @T("Admin.Orders")
            </a>
            <a href="@Url.Action("list","Admin/Product")" class="btn bg-blue">
                <i class="fa fa-plus-square"></i>
                @T("Admin.Catalog.Products")
            </a>
            <a href="@Url.Action("Create","Admin/Product")" class="btn bg-blue">
                <i class="fa fa-plus-square"></i>
                @T("Admin.Common.AddNew")
            </a>

        }

    </li>

}